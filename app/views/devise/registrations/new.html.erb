<div class = 'row'>
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '1' %>
      <h1>Basic Account</h1>
      <p>Sign up for free and get basic access to the comunity.</p>
    <% else %>
      <h1>Pro Account</h1>
      <p>Sign up for the pro account for $10/month and get full access to the communtiy and ccontact information!</p>
    <% end %>
  </div>
  <div class='col-md-6 col-md-offset-3'>
    <div class='well'>
      <h2>Sign up</h2>
      
      <% if params[:plan] == '1' %>
        <%= render "basic_form" %>
      <% else %>
        <%= render "pro_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>