<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <ul class="list-unstyled">
            <% @users.each do |user| %>
                <% if user.profile %>
                    <li>
                        <div class="well row <%= cycle('white-bg','') %>">
                            <div class="col-sm-4 text-center vert-align">
                                <% if user.profile.avatar_file_name %>
                                    <%= link_to user do %>
                                        <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %><br />
                                    <% end %>
                                <% else %>
                                    <%= link_to user do %>
                                        <%= image_tag "https://b-i.forbesimg.com/assets/images/avatars/generic_profile_image_400.jpg", class: 'user-index-avatar' %>
                                    <% end %>
                                <% end %>
                            </div>
                            
                            <div>
                                <%= link_to user do %>
                                    <h2>
                                        <%= user.profile.first_name %> <%= user.profile.last_name %>
                                        <% if user.plan_id == 2 %>
                                            <span class="label label-danger">PRO</span>
                                        <% end %>
                                    </h2>
                                <% end %>
                                <h3 class="index-job-title"><span class="job-title-icon index-job-title"><%= job_title_icon(user) %></span></h3>
                                <h4 class="index-job-title index-job-title-text"><%= user.profile.job_title %><h4>
                                
                            </div>
                            
                        </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>